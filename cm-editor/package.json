{
	"name": "@rainbow-ast/cm-editor",
	"version": "0.1.0",
	"description": "Rainbow AST, Code mirror, Editor.",
	"main": "index.cjs",
	"module": "index.js",
	"types": "index.d.ts",
	"type": "module",
	"scripts": {
		"build": "rollup -c",
		"build:ci": "rollup -c rollup.config.ci.js",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/InsureMO/rainbow-ast.git"
	},
	"author": "Rainbow Team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/InsureMO/rainbow-ast/issues"
	},
	"dependencies": {
		"events": "^3.3.0",
		"@codemirror/autocomplete": "^6.18.6",
		"@codemirror/commands": "^6.8.1",
		"@codemirror/language": "^6.6.0",
		"@codemirror/search": "^6.5.11",
		"@codemirror/lint": "^6.8.5"
	},
	"devDependencies": {
		"@rollup/plugin-eslint": "^9.0.5",
		"@types/events": "^3.0.1",
		"@types/jest": "^30.0.0",
		"@types/node": "24.0.3",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"jest": "^30.0.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rollup": "^4.44.1",
		"rollup-plugin-typescript2": "^0.36.0",
		"styled-components": "^6.1.13",
		"ts-jest": "^29.4.0",
		"typescript": "5.8.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"testRegex": "(/test/.*\\.(test|spec))\\.[tj]sx?$",
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"src/**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"coverageReporters": [
			"html"
		],
		"testEnvironment": "node"
	},
	"volta": {
		"extends": "../package.json"
	}
}